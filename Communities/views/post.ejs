<!DOCTYPE html>

<head>
    <link href="/css/forum.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


</head>

<body>
    <div class='navbar'>
        <div class="leftLinks">
            <h3>Community</h3>
            <a id="home" href="/">Home</a>
        </div>
        <div class="search">
            <form action="/search" method="POST">
                <input name="search" id="search" placeholder="Search for Communities!">
            </form>
        </div>
        <div class="rightLinks">
            <a id="settings">Settings</a>
            <a id="account">Account</a>
            <form action=" /signout" method="POST">
                <button>Sign Out</button>
            </form>
        </div>
    </div>
    <div class="sidebar">
        <div>
            <a class="link" href=<%="/community/:" + id%>>Community Home</a>
            <a class="link" href=<%="/chat/:" +id%>>Chatroom</a>
            <a class="link" href=<%="/forum/:" +post.forums_id%>>Forum</a>
            <a class="link" href="#">Members</a>
            <a class="link" href=<%="/PostPage/:" +post.forums_id%>>Create Post</a>
            <a class="link" href=<%="/createForumPage/:" +id%>>Create Forum</a>
        </div>
    </div>
    <div style="display: flex;margin:auto; width:50%;">
        <div class="score" style="display:flex;flex-direction: column;">
            <form action=<%="/vote/:"+post.id%> method="POST">
                <button name="1">Upvote</button>
                <button name="-1">Downvote</button>
            </form>
        </div>
        <div class="body">
        <div class="post">
            <p>
                <%=post.content%>
            </p>
        </div>
        <form action=<%="/comment/:" + post.id%> method="POST">
            <input name="content" rows="4" type="textarea">
            <button class="btn btn-secondary">Submit</button>
        </form>
        <div class="comments">
            <%for (var i=0;i<comments.length;i++){%>
                <p>
                    <%=comments[i].content%>
                </p>
                <div class="info" style="display:flex;">
                    <p>
                        <%=users[i].name%>
                    </p>
                    <p>
                        <%=comments[i].created_at%>
                    </p>
                </div>
                <%}%>
        </div>
        </div>
    </div>
</body>

</html>