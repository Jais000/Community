                <input  name="search" id="search" placeholder="Search for Communities!">
            </form>          
        <%}else{%>
            <div class = "container">
                <h1>Community</h1>
                <form action="/search" method="POST">
                    <input  name="search" id="search" placeholder="Search for Communities!">
                </form>
                <form action="/signin" method="GET">
                    <button>Sign In</button>
                </form>  
            </div>          
        <%}%>
        
    </body>
